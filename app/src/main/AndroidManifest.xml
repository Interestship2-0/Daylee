<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.daylee">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Daylee">
        <activity android:name=".AuthenticationActivity"></activity>
        <activity
            android:name=".LoginFragment"
            android:theme="@style/Theme.Daylee.NoActionBar" />
        <activity android:name=".DashboardFragment" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/Theme.Daylee.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterFragment"
            android:theme="@style/Theme.Daylee.NoActionBar" />
        <activity android:name=".MainActivity" />
        <activity android:name=".AddNoteFragment" />
    </application>

</manifest>